#!/bin/bash

# shellcheck disable=SC1090,SC1091

# auto_wizard
#
#   regenerates wizard workstation script. you may have to update the sources
#   locations based on where you cloned this

root="$(dirname "${BASH_SOURCE[0]}")"/..
source "${root}/lib/autocli.sh"

name="wizard"
location="${root}/bin/"

export sources=(
  "${root}/lib/wizard/"*
  "${root}/lib/devbot.sh"
  "$HOME/scripity-scripts/lib/wizard/"*
  )

export inline=(
  # "${root}/etc/wizardrc"
  "$HOME/scripity-scripts/etc/wizardrc"*
)

autocli::create \
  "$name" \
  "$location"

bash "${root}/lib/complete_wizard.sh"
