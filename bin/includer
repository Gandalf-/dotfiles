#!/usr/bin/env bash

# include $www index.html script.js style.css

set -e

die() {
  echo "$1" >&2
  exit 1
}

main() {
  local where="$1"
  local sink="$2"
  [[ -d "$where" ]] || die "Directory not found: $where"
  [[ -f "$sink" ]] || die "File not found: $sink"
  shift 2

  local replacements=()
  while [[ $1 ]]; do
    local src="$1"
    [[ -f "$src" ]] || die "File not found: $src"

    local name="${src%.*}"
    local ext="${src##*.}"

    local fullsum; fullsum="$( openssl dgst -sha256 -binary "$1" | openssl base64 -A )"
    local short; short="$( tr -cd '[:alnum:]' <<< "$fullsum" | cut -c 1-10 )"
    local out="$name-$short.$ext"

    rm -f "$where"/"$name"*."$ext"
    cp "$src" "$where"/"$out"

    fullsum="${fullsum//+/\\+}"
    fullsum="${fullsum//\//\\/}"

    replacements+=( -e "s/$src\"/$out\" integrity=\"sha256-$fullsum\"/g" )
    shift
  done

  sed "${replacements[@]}" < "$sink" > "$where"/"$sink"
}

main "$@"
